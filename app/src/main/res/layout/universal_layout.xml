<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:background="#ffd4d4"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/poster_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/users_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="user name"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/user_onlne_status"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/online"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/uDate"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="12-14-2018"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/uTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12-10 am "
                        android:textSize="10dp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="okkkk" />

        </LinearLayout>

        <ImageView
            android:id="@+id/universal_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/universal_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/text_background"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a5a5a5"
            android:orientation="horizontal">




            <ImageView
                android:layout_weight="0.5"
                android:id="@+id/uCommentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_comment" />

            <ImageView
                android:layout_weight="0.5"
                android:id="@+id/uSendMessageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_message" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>